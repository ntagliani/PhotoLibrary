<Window x:Class="PhotoLibrary.SplashScreen"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:PhotoLibrary"
		mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		Height="400" Width="800"
		WindowStyle="None"
        ResizeMode="NoResize">
	<Window.Background>
		<ImageBrush>
			<ImageBrush.ImageSource>
				<BitmapImage UriSource="pack://application:,,,/Resources/SplashBackground.png"/>
			</ImageBrush.ImageSource>
		</ImageBrush>
	</Window.Background>
	<Canvas>
		<Rectangle Fill="Black"  Opacity="0.70" Canvas.Left="0" Canvas.Top="250" Width="800" Height="100" />
		<StackPanel  Canvas.Left="20" Canvas.Top="250"> 
			
            <Label FontSize="50" Foreground="LightGray" Content="Photo Library" />
            <Label FontSize="11" Foreground="LightGray"  Content="Version: 1.0-alpha" />

        </StackPanel>
        <!--<ProgressBar Canvas.Left="0" Canvas.Top="350" Width="800" Height="20" Minimum="0" Maximum="100" IsIndeterminate="True" />-->
	</Canvas>
</Window>
